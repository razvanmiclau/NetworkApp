
<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title">Statuses</h3>
  			</div>
  			
  			<% @statuses.each do |status| %>
			  <div class="panel-body">
			    <a href="<%= user_path status.user %>" class="pull-left">
					<img class="media-object" src="<%= status.user.avatar_url %>" alt="" class="avatar">
			    </a>
			    <div class="media-body">
			    	<h4 class="media-heading">
			    		<%= status.user.name %>
			    		<small>
			    			<a href="<%= user_path status.user %>">@<%= status.user.name %></a> |
							<%= time_ago_in_words(status.created_at) %>
			    		</small>
			    	</h4>
			 
					<p><%= status.content %></p>	
			    </div>
			  </div>
			<% end %>
		</div>
	</div>

	<% if current_user %>
		<div class="col-md-4">
			<%= render 'statuses/new_form' %>
		</div>
	<% end %>
	
</div>


