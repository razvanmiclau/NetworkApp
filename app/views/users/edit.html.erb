
<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title">Edit Profile</h3>
  			</div>
  			
			  <div class="panel-body">
			  	<%= form_for @user do |f| %>
			  		<% if @user.errors.any? %>
				  		<ul>
				  			<% @user.errors.full_messages.each do |e| %>
				  				<li><%= e %></li>
				  			<% end %>
				  		</ul>
			  		<% end %>

			  	<p>Email: <%= f.text_field :email, class: 'form-control' %></p>
			  	<p>Name: <%= f.text_field :name, class: 'form-control' %></p>
			  	<p>Password: <%= f.password_field :password, class: 'form-control' %></p>
			  	<p>Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control' %></p>
			  	<p>Bio: <%= f.text_area :bio, class: 'form-control' %></p>
			  	<p><%= f.submit "Update", class: 'btn btn-primary' %></p>

			   <% end %>

			  </div>
			
		</div>
	</div>
</div>

<%= javascript_include_tag 'statuses' %>