<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
  			<div class="panel-heading">
    			<h3 class="panel-title">Public Profiles</h3>
  			</div>
  		
  		<% @users.each do |user| %>
  			<div class="panel-body">
				<img class="media-object pull-left" src="<%= user.avatar_url %>" alt=""/>
				<div class="media-body">
					<h4>@<%= user.username %></h4>
					<span>
						<%= user.statuses.length %> Statuses | 
						<%= user.followers.length %>  Followers |
						<%= user.followeds.length %> Following
					</span>

					<% if user.bio %>
						<p><%= user.bio %></p>
					<% elsif user.statuses.first %>
						<p><%= user.statuses.first.content %></p>
					<% end %>
					
				</div>
			</div>
		<% end %>
		</div>
	</div>

	<% if current_user %>
		<div class="col-md-4">
			<%= render 'statuses/new_form' %>
		</div>
	<% end %>
</div>

<%= javascript_include_tag 'statuses' %>