<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1><%= @user.name + "'s" %> <small>Profile</small></h1>
		</div>
		
	</div>
</div>


<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<img src="<%= @user.avatar_url %>" alt=""
		>
			<span>@<%= @user.username %></span>
		</div>
	</div>

	<% if current_user %>
		<div class="col-md-8">
			<%= render 'statuses/new_form' %>
		</div>
	<% end %>
	
</div>